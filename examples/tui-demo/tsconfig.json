{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022"],
    "jsx": "react-jsx",
    "jsxImportSource": "@rapid/tui",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["bun-types"],
    "baseUrl": ".",
    "paths": {
      "@rapid/tui": ["../../packages/zen-tui/src/index.ts"],
      "@rapid/tui/*": ["../../packages/zen-tui/src/*"]
    }
  },
  "include": ["src/**/*"]
}
